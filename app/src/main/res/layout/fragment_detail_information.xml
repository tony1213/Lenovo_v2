<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.25"
                    app:contentPadding="16dp">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目说明"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/text_size_title" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="2dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@color/blue" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_contract_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目经理：" />

                            <TextView
                                android:id="@+id/tv_contract_manager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_contract_manager_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="技术支持：" />

                            <TextView
                                android:id="@+id/tv_contract_technical_support"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_contract_technical_support_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="技术支持QQ群：" />

                            <TextView
                                android:id="@+id/tv_contract_technical_support_qq_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信群：" />

                            <TextView
                                android:id="@+id/tv_contract_technical_support_wechat_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.25"
                    app:contentPadding="16dp">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工单信息"
                                android:textColor="@color/simple_orange"
                                android:textSize="@dimen/text_size_title" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="2dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@color/simple_orange" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报    修   人：" />

                            <TextView
                                android:id="@+id/tv_repair_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报 修 时 间：" />

                            <TextView
                                android:id="@+id/tv_repair_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电           话：" />

                            <TextView
                                android:id="@+id/tv_repair_person_contact_information"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开 单 时 间：" />

                            <TextView
                                android:id="@+id/tv_create_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地 址 信 息：" />

                            <TextView
                                android:id="@+id/tv_repair_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="门 店 信 息：" />

                            <TextView
                                android:id="@+id/tv_repair_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="门 店 电 话：" />

                            <TextView
                                android:id="@+id/tv_store_contact_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务台信息：" />

                            <TextView
                                android:id="@+id/tv_remark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default" />
                        </LinearLayout>

                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.25"
                    app:contentPadding="16dp">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SLA要求"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_size_title" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="2dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:background="@color/green" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="SLA服务水平要求：" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="响应时间：" />

                            <TextView
                                android:id="@+id/tv_sla_response_datetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default"
                                android:textColor="@color/simple_green" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上门时间：" />

                            <TextView
                                android:id="@+id/tv_sla_home_datetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default"
                                android:textColor="@color/simple_green" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="解决时间：" />

                            <TextView
                                android:id="@+id/tv_sla_solved_datetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="default"
                                android:textColor="@color/simple_green" />
                        </LinearLayout>
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="end">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        app:cardBackgroundColor="@color/simple_orange"
                        app:cardCornerRadius="4dp"
                        app:contentPadding="2dp">

                        <TextView
                            android:id="@+id/tv_store_repair_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="查看此门店最近3个月报修情况"
                            android:textColor="@color/main_white" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
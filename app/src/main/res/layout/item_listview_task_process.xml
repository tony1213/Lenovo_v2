<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp">

    <ImageView
        android:id="@+id/iv_process_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:src="@mipmap/icon_process_point" />

    <View
        android:layout_width="1dp"
        android:layout_height="58dp"
        android:layout_below="@id/iv_process_point"
        android:layout_marginLeft="34dp"
        android:background="@color/main_orange" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/iv_process_point"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_process_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_task_state" />

        <TextView
            android:id="@+id/tv_task_process_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="default"
            android:textSize="@dimen/text_size_task_info" />

        <TextView
            android:id="@+id/tv_task_process_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="default"
            android:textSize="@dimen/text_size_task_info" />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_task_action"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_task_state_bg"
        android:drawableLeft="@drawable/selector_task_visit"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:text="default"
        android:textColor="@color/main_white"
        android:textSize="13sp" />

</RelativeLayout>
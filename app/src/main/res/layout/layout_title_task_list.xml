<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/bg_qq_blue">

    <TextView
        android:id="@+id/tv_location_city"
        style="@style/tv_list_white_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_task_list_filter"
        style="@style/tv_title_white_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableRight="@mipmap/arrow_down_white"
        android:text="所有工单" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp">

        <ImageView
            android:id="@+id/iv_task_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_common_notification" />

        <TextView
            android:id="@+id/tv_new_msg_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/shape_textview_red_circle"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/main_white"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
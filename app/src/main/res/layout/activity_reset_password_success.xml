<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.business.common.password.ResetPasswordSuccessActivity">

    <include
        android:id="@+id/include_reset_password_success"
        layout="@layout/layout_title_common" />

    <ImageView
        android:id="@+id/iv_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_reset_password_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@mipmap/icon_common_successful" />

    <TextView
        android:id="@+id/textView1"
        style="@style/tv_list_primary_style"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_reset_password"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="恭喜您，密码重置成功！" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_view_toolbar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#9e9e9e"
        app:contentPadding="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同编号:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同名称:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签约日期:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签约甲方:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_party_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签约乙方:"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contract_party_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="haha"
                    android:textColor="@color/main_white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
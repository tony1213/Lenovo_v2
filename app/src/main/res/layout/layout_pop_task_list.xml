<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_mask"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_task_all"
        style="@style/tv_title_white_style"
        android:padding="7dp"
        android:text="所有工单" />

    <TextView
        android:id="@+id/tv_task_receive"
        style="@style/tv_title_white_style"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="接单" />

    <TextView
        android:id="@+id/tv_task_order"
        style="@style/tv_title_white_style"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="预约" />

    <TextView
        android:id="@+id/tv_task_visit"
        style="@style/tv_title_white_style"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="上门" />

    <TextView
        android:id="@+id/tv_task_account"
        style="@style/tv_title_white_style"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="结单" />

    <TextView
        android:id="@+id/tv_task_evaluation"
        style="@style/tv_title_white_style"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="评价" />
</LinearLayout>
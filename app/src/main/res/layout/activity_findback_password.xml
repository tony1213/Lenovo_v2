<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_signin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/commom_title_reset_password"
        android:textColor="@color/main_white"
        android:textSize="36sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_findback_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="180dp"
        android:drawableLeft="@mipmap/common_regiter_phone"
        android:drawablePadding="10dp"
        android:hint="请输入注册时手机号"
        android:textColorHint="@color/main_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_findback_phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_findback_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/common_register_sms_code"
            android:drawablePadding="4dp"
            android:hint="请输入验证码"
            android:textColorHint="@color/main_white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_get_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_white"
            android:minHeight="30dp"
            android:text="获取验证码"
            android:textColor="@color/toolbar_bg"
            android:textSize="18sp" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_findback_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_findback_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/selector_button_enable"
        android:enabled="false"
        android:minHeight="36dp"
        android:text="下一步"
        android:textColor="@color/toolbar_bg"
        android:textSize="18sp" />
</RelativeLayout>